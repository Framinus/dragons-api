{
  "name": "api-testing",
  "version": "1.0.0",
  "description": "dragons api",
  "main": "server.js",
  "scripts": {
    "start": "node src/server.js",
    "test": "mocha --exit",
    "start:dev": "nodemon src/server.js",
    "db:create": "createdb dragons",
    "db:drop": "dropdb dragons",
    "db:load": "psql dragons < src/model/data/schema.sql",
    "db:seed": "psql dragons < src/model/data/seed.sql",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:load && npm run db:seed",
    "db:test:drop": "dropdb dragons_test",
    "db:test:create": "createdb dragons_test",
    "db:test:drop": "dropdb dragons_test",
    "db:test:load": "psql dragons_test < src/model/data/schema.sql",
    "db:test:seed": "psql dragons_test < src/model/data/seed.sql",
    "db:test:reset": "npm run db:test:drop && npm run db:test:create && npm run db:test:load"
  },
  "repository": {
    "type": "git",
    "url": "dragons-api"
  },
  "keywords": [
    "dragons"
  ],
  "author": "James McCormack",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "chai-http": "^4.0.0",
    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.16.2",
    "pg-promise": "^7.3.3"
  },
  "devDependencies": {
    "ajv": "^5.2.2",
    "chai": "^4.1.2",
    "eslint": "^4.6.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "mocha": "^4.1.0"
  }
}
